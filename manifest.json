{
  "manifest_version": 3,
  "name": "YouTube Dual Subtitles",
  "version": "3.0.0",
  "description": "Add DUAL SUBTITLES to YouTube videos",
  "author": "Jim Chen",
  "homepage_url": "https://jimchen.me",
  "permissions": ["storage", "downloads", "tabs"],
  "host_permissions": ["https://*.youtube.com/*"],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "YouTube Dual Subtitles Settings",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["https://*.youtube.com/*"]
    }
  ]
}